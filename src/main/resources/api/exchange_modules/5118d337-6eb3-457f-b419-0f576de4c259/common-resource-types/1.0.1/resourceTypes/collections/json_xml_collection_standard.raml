#%RAML 1.0 ResourceType

#GET method JSON & XML
    get?:
      description: <<getDescription>>
      is: 
        - jsonResponse: {statusCode: 200, responseDescription: "This status code will be returned when the request has succeeded", recordType: <<getResponseTypeJson>>, recordExample: <<getResponseExampleJson>>}
        - xmlResponse: {statusCode: 200, responseDescription: "This status code will be returned when the request has succeeded", recordType: <<getResponseTypeXml>>, recordExample: <<getResponseExampleXml>>}
        - getErrorResponse



#POST method JSON & XML
    post?:      
      description: <<postDescription>>
      body:
        application/json:
          type: <<postRequestTypeJson>>
          example: <<postRequestExampleJson>>
        application/xml:
          type: <<postRequestTypeXml>>
          example: <<postRequestExampleXml>>
      is: 
        - jsonResponse: {statusCode: 201, responseDescription: "This status code will be returned when the request has succeeded and a new resource has been created as a result", recordType: <<postResponseTypeJson>>, recordExample: <<postResponseExampleJson>>}
        - xmlResponse: {statusCode: 201, responseDescription: "This status code will be returned when the request has succeeded and a new resource has been created as a result", recordType: <<postResponseTypeXml>>, recordExample: <<postResponseExampleXml>>}
        - postErrorResponse
      


